@model FMS_Objects.Enities.Food
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>

</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class=" modal-body">
        <div class="container-fluid">
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header" data-background-color="purple">
                                <h3 class="modal-title">Editing @Html.DisplayFor(model => model.FoodName)</h3>
                            </div>
                            <div class="card-content">
                                <form>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.RestaurantId)
                                    @Html.HiddenFor(model => model.FoodId)
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group label-floating">
                                                @Html.LabelFor(model => model.FoodName, new { @class = "control-label" })
                                                @Html.TextBoxFor(model => model.FoodName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.FoodName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group label-floating">
                                                @Html.LabelFor(model => model.FoodType, new { @class = "control-label" })
                                                @Html.DropDownListFor(model => model.FoodType, new SelectList(Enum.GetValues(typeof(FMS_Objects.Enums.FoodType))), " ", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.FoodType, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group label-floating">
                                                @Html.LabelFor(model => model.FoodPrice, new { @class = "control-label" })
                                                @Html.TextBoxFor(model => model.FoodPrice, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.FoodPrice, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group label-floating">
                                                @Html.LabelFor(model => model.FoodDescription, new { @class = "control-label" })
                                                @Html.TextAreaFor(model => model.FoodDescription, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.FoodDescription, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group label-floating">
                                                @Html.LabelFor(model => model.FoodImage, new { @class = "control-label" })
                                                @Html.TextBoxFor(model => model.FoodImage, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.FoodImage, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal-footer">
                                        <input class="btn btn-primary" type="submit" value="Save" />
                                        <button class="btn btn-warning" data-dismiss="modal">Close</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>