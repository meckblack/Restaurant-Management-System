@using PagedList;
@using PagedList.Mvc;
@using FMS_Objects.Enities;

@model IPagedList<FMS_Objects.Enities.Food>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
    var food = new Food();
}
<style>
    .modal-backdrop {
        z-index: 0;
    }
    
</style>

<div class="container-fluid">
    <div class="row">
        @using (Html.BeginForm("Index", "Food", FormMethod.Get))
        { 
            <div class="col-md-offset-9 col-md-3" >
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group  is-empty">
                        @Html.TextBox("SearchString", ViewBag.currentFilter as string, new { @class = "form-control", @placeholder = "Search" })
                        <span class="material-input"></span>
                    </div>
                    <button type="submit" class="btn btn-white btn-round btn-just-icon">
                        <i class="material-icons">search</i><div class="ripple-container"></div>
                    </button>
                </form>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-md-12">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                <li><a href="@Url.Action("Index", "Restaurant")">Restaurant</a></li>
                <li><a href="@Url.Action("Index", "RestaurantDashboard", new { id = Convert.ToInt32(Session["rID"]) })"> @Session["rNamee"].ToString()</a></li>
                <li>Foods</li>
                
                    <a href="@Url.Action("Create", "Food")" data-modal="" class="btn btn-primary pull-right">ADD</a>
                
            </ul>
            
            <div class="card">
                <div class="card-header" data-background-color="purple">
                    <h4 class="title">FOODS</h4>
                </div>
                <div class="card-content table-responsive">
                        <table class="table">
                            <thead class="text-primary">
                                <tr>
                                    <th>
                                        @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.FoodNameSortParm })
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        @Html.ActionLink("Type", "Index", new { sortOrder = ViewBag.FoodTypeSortParm})
                                    </th>
                                    <th>
                                        Price
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FoodName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FoodImage)
                                        </td>
                                       
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FoodType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FoodPrice)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FoodDescription)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Food", new { id = item.FoodId })" data-modal=""><i style="padding-right: 5px; color: red;" class="fa fa-2x fa-edit" ></i></a>
                                            <a href="@Url.Action("Delete", "Food", new { id = item.FoodId })" data-modal=""><i class="fa fa-2x fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <hr/>
                          Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                          @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                </div>
            </div>
        </div>
    </div>
</div>
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
            </div>
        </div>
    </div>
</div>
<script src="~/scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/Appjs/FMS.js"></script>
