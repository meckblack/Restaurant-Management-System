@model IEnumerable<FMS_Objects.Enities.Sales>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sales";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index", "RestaurantDashboard", new { id = Convert.ToInt32(Session["rID"]) })"> @Session["rNamee"].ToString()</a></li>
                <li>Foods</li>
                <a href="@Url.Action("Create", "Sales")" data-modal="" class="btn btn-primary pull-right">ADD</a>
            </ul>

            <div class="card">
                <div class="card-header" data-background-color="purple">
                    <h4 class="title">SALES</h4>
                </div>
                <div class="card-content table-responsive">
                    <table class="table">
                        <thead class="text-primary">
                            <tr>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Amount
                                </th>
                                <th>
                                    Quantity
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SaleTitle)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SaleAmount)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.SaleQuantity)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Sale", new { id = item.SaleId })" data-modal=""><i style="padding-right: 5px" class="fa fa-2x fa-edit"></i></a>
                                        <a href="@Url.Action("Delete", "Sale", new { id = item.SaleId })" data-modal=""><i class="fa fa-2x fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
            </div>
        </div>
    </div>
</div>
<script src="~/scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/Appjs/FMS.js"></script>
